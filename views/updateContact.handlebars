<div class="row my-4 my-4">
    <div class="col-ld-8 mx-auto">
        <h3>Modify a contact</h3>
        <hr>
        <div class="card p-3">
            <form action="/update/{{contact._id}}" method="post">
                <div class="form-group">
                    <input type="text" name="name" value="{{contact.name}}" placeholder="nom & prenom" class="form-control">
                </div>
                <div class="form-group">
                    <input type="text" name="phone" value="{{contact.phone}}" placeholder="telephone" class="form-control">
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-primary">Valider</button>
                </div>
            </form>
        </div>
    </div>
</div>